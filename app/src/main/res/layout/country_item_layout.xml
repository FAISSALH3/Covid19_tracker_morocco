<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    :android="http://schemas.android.com/apk/res-auto"


   android:layout_width="match_parent"

    app:cardElevation="3dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"

     android:layout_height="wrap_content"
    tools:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="12dp"

        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/sno"

            android:layout_width="40dp"
            android:layout_alignParentStart="true"
            android:text="123"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"
            android:layout_marginEnd="12dp"

            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size0"
            android:fontFamily="@font/rubikregular"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />


        <ImageView
            android:layout_width="70dp"
            android:layout_toEndOf="@+id/sno"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:id="@+id/countryImage"
            android:layout_toRightOf="@+id/sno" />

        <TextView

            android:id="@+id/countryName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="morocco"
            android:textColor="@color/Black"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/countryImage"

            android:textSize="@dimen/text_size0"
            android:fontFamily="@font/rubikregular"

            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/countryImage" />
        <TextView

            android:id="@+id/countryCases"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:text="123456"
            android:textColor="@color/Black"
            android:layout_marginEnd="12dp"


            android:textSize="@dimen/text_size0"
            android:fontFamily="@font/rubikregular"



            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>